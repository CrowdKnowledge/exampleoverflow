<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
    <error-page>
        <error-code>404</error-code>
        <location>/pagenotfound</location>
    </error-page>
    <servlet>
		<servlet-name>NotFound</servlet-name>
		<servlet-class>view.NotFoundServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotFound</servlet-name>
		<url-pattern>/pagenotfound</url-pattern>
	</servlet-mapping>
    <servlet>
		<servlet-name>AjaxSearch</servlet-name>
		<servlet-class>view.AjaxSearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AjaxSearch</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SpellCheck</servlet-name>
		<servlet-class>view.SearchSuggestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SpellCheck</servlet-name>
		<url-pattern>/spellcheck</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UpdateData</servlet-name>
		<servlet-class>controller.UpdateDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateData</servlet-name>
		<url-pattern>/updatedata</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>exampleoverflow.jsp</welcome-file>
	</welcome-file-list>
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/updatedata/*</url-pattern>
			<url-pattern>/remote_api</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

